.wmd-panel
  #wmd-button-bar
  = simple_form_for([@group, Post.new], format: :json, html: {class: 'form-inline'}, remote: true) do |f|
    = f.input(:content, label: false, input_html: {style: 'height: 3.0em;', id: 'wmd-input', class: 'span12 auto_clear wmd-input'}, autocomplete: 'off')
    #wmd-preview.wmd-panel.wmd-preview
    = f.submit(t('.submit'), class: 'btn btn-primary')
