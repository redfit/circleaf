- content_for(:body_class, 'groups')
%h1= t('.title')

= link_to(new_group_path, class: 'new_btn btn btn-primary') do
  %i.icon-white.icon-plus-sign
  = t('nav.groups.new')

= paginate @groups

%ul.thumbnails
  - @groups.each do |group|
    %li.span4
      = link_to(group_path(group), class: 'thumbnail') do
        %h4= group.name
        = image_tag group.image_url || image_url('circleaf300x300.png'), class: 'img-rounded'
        %p= truncate(group.content, length: 20)

= paginate @groups
